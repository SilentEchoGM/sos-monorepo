{
  "name": "sos-emulator-electron",
  "version": "0.2.6",
  "description": "The electron wrapper for the SOS emulator.",
  "main": "build/main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "run-s -l build:electron",
    "build:electron": "tsc",
    "dist": "electron-builder",
    "start": "run-s build && run-p -l start:svelte start:electron",
    "start:electron": "electron .",
    "start:svelte": "cd ../emulator-svelte && run-s dev",
    "build:watch": "run-s \"build -- {1} {2}\" -- -w --preserveWatchOutput"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SilentEchoUK/sos-packages.git"
  },
  "author": "SilentEcho",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/SilentEchoUK/sos-packages/issues"
  },
  "homepage": "https://github.com/SilentEchoUK/sos-packages#readme",
  "dependencies": {
    "accepts": "~1.3.8",
    "axios": "~0.26.0",
    "dotenv": "^16.0.0",
    "electron-is-dev": "~2.0.0",
    "electron-log": "~4.4.6",
    "electron-updater": "~4.6.5",
    "fp-ts": "^2.11.8",
    "fs-extra": "~10.0.1",
    "socket.io": "~4.4.1",
    "sos-emulator-types": "1.0.0",
    "sos-plugin-types": "1.0.0",
    "ws": "~8.5.0"
  },
  "devDependencies": {
    "@types/node": "17.0.21",
    "@types/ws": "~8.5.1",
    "electron": "17.1.0",
    "electron-builder": "~22.14.13",
    "npm-run-all": "~4.1.5",
    "typescript": "^4.0.0"
  },
  "peerDependencies": {
    "sos-emulator-svelte": "*"
  },
  "build": {
    "productName": "SOS Emulator",
    "appId": "sos-emulator",
    "asar": true,
    "nsis": {
      "artifactName": "${productName}.${version}.${ext}"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "../emulator-svelte/graphics/sos-emu.ico"
    },
    "directories": {
      "output": "../../release/sos-emulator/${version}"
    },
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "../emulator-svelte/public",
        "to": "svelte",
        "filter": [
          "**/*"
        ]
      }
    ],
    "publish": [
      {
        "provider": "generic",
        "url": "http://sosemu.silentecho.eu/upload"
      }
    ]
  }
}
